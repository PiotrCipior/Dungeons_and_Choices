<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.text.Text?>
<VBox alignment="CENTER" spacing="20.0" xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.example.dungeons_and_choices.shark">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
    </padding>

    <Text text="Zaciekawiła Cię ogromna głowa żarłacza białego. Widać po nim ślady walki, prawdopodobnie nie jednej.
 Szramy jak u wiedźmina, a przy skrzelach głęboka dziura po harpunie. Szare łuski zapierają dech w piersi, a śnieżno-białe kły
 przyprawiają o dreszcze. Ale właśnie… Jeden z zębów wygląda dość wyjątkowo… Chcesz po niego sięgnąć?" textAlignment="CENTER" wrappingWidth="500" />
    <Button fx:id="button" text="Tak, wyjmij zęba"  onAction="#putIn" alignment="BASELINE_CENTER" maxWidth="160" translateX="-120"/>
    <Button fx:id="button1" text="Nie, nie będę mu wkładał ręki do paszczy"  onAction="#dontPutIn" alignment="BASELINE_CENTER" maxWidth="160" translateX="120" translateY="-46"/>
    <Text text="" fx:id="choice" textAlignment="CENTER" wrappingWidth="500" visible="false"/>
    <Button fx:id="next" text="Wybiegnij z karczmy"  onAction="#run" alignment="BASELINE_CENTER" maxWidth="160" visible="false" disable="true"/>
</VBox>